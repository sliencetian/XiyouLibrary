<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent" >

    <RelativeLayout
        android:id="@+id/rl_head_fragment_my"
        android:layout_width="fill_parent"
        android:layout_height="180dp" >

        <com.tz.xiyoulibrary.bubblesbackview.BubbleBackView
            xmlns:cv="http://schemas.android.com/apk/res/com.tz.xiyoulibrary"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            cv:backColor="@color/theme_color"
            cv:circleRadio="60"
            cv:circleSum="12" />

        <com.tz.xiyoulibrary.circleimageview.CircleImageView
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/civ_user_img_fragment_my"
            android:layout_width="65dp"
            android:layout_height="65dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="30dp"
            android:src="@drawable/user_img"
            app:border_color="@color/theme_color"
            app:border_width="2dp" />

        <TextView
            android:id="@+id/tv_id_fragment_my"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/civ_user_img_fragment_my"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="5dp"
            android:text="@string/numb_text"
            android:textColor="@color/white"
            android:textSize="@dimen/text_size" />

        <TextView
            android:id="@+id/tv_department_fragment_my"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_id_fragment_my"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="5dp"
            android:text="@string/class_text"
            android:textColor="@color/white"
            android:textSize="@dimen/text_size" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/rl_head_fragment_my"
        android:background="@color/dark_grey"
        android:orientation="vertical" >

        <RelativeLayout
            android:id="@+id/rl_myborrow_fragment_my"
            android:layout_width="fill_parent"
            android:layout_height="60dp"
            android:layout_marginTop="0.5dp"
            android:background="@drawable/my_rl_selector" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="15dp"
                android:text="@string/my_borrow_text"
                android:textSize="@dimen/text_size" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="15dp"
                android:text="@string/right_arrow_text"
                android:textColor="@color/dark_grey"
                android:textSize="@dimen/right_arrow_size" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl_foot_fragment_my"
            android:layout_width="fill_parent"
            android:layout_height="60dp"
            android:layout_marginTop="0.5dp"
            android:background="@drawable/my_rl_selector" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="15dp"
                android:text="@string/my_foot_text"
                android:textSize="@dimen/text_size" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="15dp"
                android:text="@string/right_arrow_text"
                android:textColor="@color/dark_grey"
                android:textSize="@dimen/right_arrow_size" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl_collection_fragment_my"
            android:layout_width="fill_parent"
            android:layout_height="60dp"
            android:layout_marginTop="0.5dp"
            android:background="@drawable/my_rl_selector" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="15dp"
                android:text="@string/my_collection_text"
                android:textSize="@dimen/text_size" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="15dp"
                android:text="@string/right_arrow_text"
                android:textColor="@color/dark_grey"
                android:textSize="@dimen/right_arrow_size" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl_ranklist_fragment_my"
            android:layout_width="fill_parent"
            android:layout_height="60dp"
            android:layout_marginBottom="0.5dp"
            android:layout_marginTop="0.5dp"
            android:background="@drawable/my_rl_selector" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="15dp"
                android:text="@string/ranklist_text"
                android:textSize="@dimen/text_size" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="15dp"
                android:text="@string/right_arrow_text"
                android:textColor="@color/dark_grey"
                android:textSize="@dimen/right_arrow_size" />
        </RelativeLayout>
    </LinearLayout>

</RelativeLayout>